<%= render "shared/user", user: @user %>

<ul>
    <% @user.recent_posts.each_with_index do 
    |post, index| %>
     <li class="pagination">
        <h2>Post #<%= index + 1 %></h2>
         <a href=<%= "/users/#{@user.id}/posts/#{post.id}"%> class="post_next_page" >
            <p class="Post_text" ><%= post.text %><p>
         </a>
       <%= render "shared/post",  post: post %>
        <div class="main_comment">
         <h3>Comments</h3>
       <% post.recent_comments.each do |comment| %>
       <div class="comment">
        <h6> <%= comment.author.name %> </h6>
        <p> <%= comment.text %> </p>
        </div>
       <% end %>
       </li>
    <% end %>
</ul>
<div class="btn">
<%= link_to "Add Post",  new_user_post_path(@user), class:"submit-btn" %>
</div>